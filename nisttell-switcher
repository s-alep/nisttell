#!/usr/bin/env python3
"""
nisttell

Lists all ghostty windows in niri and lets you pick one via fzf.
After selection, the chosen window is focused.

Requires:
  - python3
  - fzf or fuzzel
  - niri (niri msg)
"""

import subprocess
import json
import sys


def run(cmd):
    return subprocess.run(cmd, capture_output=True, text=True)


def get_niri_windows():
    res = run(["niri", "msg", "--json", "windows"])
    if res.returncode != 0:
        print("ERROR running niri msg:", res.stderr, file=sys.stderr)
        sys.exit(1)
    try:
        return json.loads(res.stdout)
    except Exception as e:
        print("JSON parse error:", e, file=sys.stderr)
        sys.exit(1)


def focus_window(window_id):
    run(["niri", "msg", "action", "focus-window", "--id", str(window_id)])


def main():
    windows = get_niri_windows()

    ghosttys = []
    for w in windows:
        app_id = w.get("app_id", "")
        if isinstance(app_id, str) and "ghostty" in app_id:
            ghosttys.append(w)

    if not ghosttys:
        print("No ghostty windows found.")
        sys.exit(0)

    lines = "\n".join(f"{w['title']}\t{w['id']}" for w in ghosttys)

    #Uncomment for fzf mode

    fzf = subprocess.run(
        ["fzf", "--with-nth=1", "--delimiter=\t"],
        input=lines,
        text=True,
        capture_output=True,
    )
    if fzf.returncode != 0 or not fzf.stdout.strip():
        print("No selection.")
        sys.exit(0)
    selected = fzf.stdout.strip().split("\t")

    # fuzzel = subprocess.run(
    #     ["fuzzel", "-d"],
    #     input=lines,
    #     text=True,
    #     capture_output=True,
    # )

    # if fuzzel.returncode != 0 or not fuzzel.stdout.strip():
    #     print("No selection.")
    #     sys.exit(0)

    # selected = fuzzel.stdout.strip().split("\t")
    window_id = selected[1]

    focus_window(window_id)


if __name__ == "__main__":
    main()
